#!/usr/bin/bash

audioinfo=$(amixer sget Master)
[[ "$audioinfo" =~ \[([0-9]+%)\].*\[(on|off)\] ]]
volume=${BASH_REMATCH[1]}
volume_status=`case "${BASH_REMATCH[2]}" in
	off) echo "ğŸ”‡";;
	on)  echo "ğŸ”‰";;
	*)   echo "ğŸ”‰?";;
esac`

echo -n "${volume_status} ${volume}" > /tmp/sound_changed_event

